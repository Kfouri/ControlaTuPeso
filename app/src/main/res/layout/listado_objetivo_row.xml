<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@color/background"
	android:orientation="horizontal" >

    <LinearLayout android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:background="@color/background"
	              android:orientation="vertical" >

        <TextView android:id="@+id/txt_fecha"
		          android:textSize="15sp" 
		          android:textStyle="bold" 
		          android:textColor="#000000" 
		          android:layout_width="wrap_content" 
		          android:layout_height="wrap_content"
		          android:text="Fecha hasta"
		          android:paddingLeft="15dp"/>

        <TextView android:id="@+id/txt_peso"
		          android:textSize="15sp" 
		          android:textStyle="bold" 
		          android:textColor="#000000" 
		          android:layout_width="wrap_content" 
		          android:layout_height="wrap_content"
		          android:text="Peso Objetivo"
		          android:paddingLeft="15dp"/>

        <TextView android:id="@+id/txt_peso_real"
		          android:textSize="15sp" 
		          android:textStyle="bold" 
		          android:textColor="#000000" 
		          android:layout_width="wrap_content" 
		          android:layout_height="wrap_content"
		          android:text="Último peso hasta ésta fecha"
		          android:paddingLeft="15dp"/>
        
        <TextView android:id="@+id/txt_estado"
		          android:textSize="15sp" 
		          android:textStyle="bold" 
		          android:textColor="#000000" 
		          android:layout_width="wrap_content" 
		          android:layout_height="wrap_content"
		          android:text="Estado"
		          android:paddingLeft="15dp"/>
	</LinearLayout>

    
    <LinearLayout android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:background="@color/background"
	              android:orientation="vertical" >


	    <TextView android:id="@+id/fecha"
		          android:textSize="15sp" 
		          android:textStyle="bold" 
		          android:textColor="#000000" 
		          android:layout_width="wrap_content" 
		          android:layout_height="wrap_content"
		          android:text="01/01/2013"
		          android:paddingLeft="20dp"/>
	    
        <TextView
            android:id="@+id/peso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="76"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingLeft="20dp" />
	    
		<TextView android:id="@+id/peso_real" 
			android:textSize="15sp" 
			android:textStyle="bold" 
			android:textColor="#000000" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="20"
			android:paddingLeft="20dp"/>

        <TextView android:id="@+id/estado" 
			android:textSize="15sp" 
			android:textStyle="bold" 
			android:textColor="#000000" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="No cumplido"
			android:paddingLeft="20dp"/>
	</LinearLayout>
</LinearLayout>